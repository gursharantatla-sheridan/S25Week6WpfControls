<Window x:Class="S25Week6WpfControls.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S25Week6WpfControls"
        mc:Ignorable="d"
        Title="Login Window" Height="322" Width="410" FontSize="16" FontWeight="Bold" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Canvas>
        <Label Content="Username" Canvas.Left="94" Canvas.Top="62"/>
        <Label Content="Password" Canvas.Left="98" Canvas.Top="117"/>
        <TextBox x:Name="txtUsername" Canvas.Left="184" TextWrapping="Wrap" Canvas.Top="66" Width="120"/>
        <PasswordBox x:Name="pswPassword" Canvas.Left="184" Canvas.Top="121" Width="120"/>
        <Button x:Name="btnLogin" Content="Login" Canvas.Left="94" Canvas.Top="198" Height="39" Width="95" Click="btnLogin_Click" IsDefault="True"/>
        <Button x:Name="btnClose" Content="Close" Canvas.Left="209" Canvas.Top="198" Height="39" Width="95" HorizontalAlignment="Left" VerticalAlignment="Center" Click="btnClose_Click" IsCancel="True"/>

    </Canvas>
</Window>
